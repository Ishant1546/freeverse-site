---
import BaseLayout from '../layouts/BaseLayout.astro';
---
<BaseLayout pageTitle="Plans">
  <h2 class="text-3xl font-bold mb-6 text-yellow-400">Our Plans</h2>
  <div class="grid md:grid-cols-3 gap-6">
    <div class="bg-gray-800 p-6 rounded-lg border border-gray-700 hover:border-yellow-400">
      <h3 class="text-2xl font-bold mb-2">Starter</h3>
      <p>Basic access to all free resources.</p>
    </div>
    <div class="bg-gray-800 p-6 rounded-lg border border-gray-700 hover:border-yellow-400">
      <h3 class="text-2xl font-bold mb-2">Pro</h3>
      <p>Extra access, early updates, and private maps.</p>
    </div>
    <div class="bg-gray-800 p-6 rounded-lg border border-gray-700 hover:border-yellow-400">
      <h3 class="text-2xl font-bold mb-2">Premium</h3>
      <p>Full access + free requests and VIP support.</p>
    </div>
  </div>
</BaseLayout>
